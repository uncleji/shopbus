.aside{
	width:4rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}

.dish{
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
}
.dish p{
	color: orange;
	font-size: .75rem;
}
.dish .add-btn{
	width: 4rem;
	text-align: right;
}
.add-btn .span{
  background: rgb(221, 220, 220);
  font-size: 0.7rem;
  width:1rem;
  height:1rem;
  line-height:1rem;
  border-right:none;
  display: inline-block;
  border-radius: 0.5rem;
  text-align: center
}
.add-btn .goujiah{
  background: rgb(250, 145, 8);
}
.add-btn .gounum{
  background: #fff;
}
.cart{
	display: block;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 1rem;
	background: #ddd;
}


.good_box {
  width: 30px;
  height: 30px;
  position: fixed;
  border-radius: 50%;
	overflow: hidden;
	background: rgb(254, 209, 6);
	border-radius: 100%;
  left: 50%;
  top: 50%;
  z-index: +99;
}
.good_box image {
  display: block;
  width: 100%;
  height: 100%;
}
#bus{
	width: 60rpx;
	height: 60rpx;
	float: right;
	margin:20rpx 20rpx;
}
.top{
	overflow: hidden;
}
